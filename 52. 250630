<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect } = React;

        // ì…ë ¥ì°½ ì»´í¬ë„ŒíŠ¸
        function Search({ inputValue, onInputChange }) {
            return (
                <div>
                <label htmlFor="emoji-search" style={{ marginRight: '10px', fontSize: '18px' }}>
                    ì´ëª¨ì§€ ì´ë¦„ ì…ë ¥:
                </label>
                <input
                    id="emoji-search"
                    type="text"
                    value={inputValue}
                    onChange={onInputChange} // onChange ì´ë²¤íŠ¸ ë°œìƒ ì‹œ ë¶€ëª¨ì˜ í•¨ìˆ˜ í˜¸ì¶œ
                    placeholder="ì˜ˆ: ghost, smile, cat"
                    style={{ padding: '8px', fontSize: '16px' }}
                />
                </div>
            );
        }

        // ì´ëª¨ì§€ í‘œì‹œ ì»´í¬ë„ŒíŠ¸
        function Display({ emojis, searchName }) {
            // ê²€ìƒ‰ì–´(searchName)ê°€ ì´ëª¨ì§€ ëª©ë¡(emojis)ì— í‚¤ë¡œ ì¡´ì¬í•˜ëŠ”ì§€ í™•ì¸
            const imageUrl = emojis && emojis[searchName];

            // imageUrlì´ ì¡´ì¬í•  ê²½ìš°ì—ë§Œ img íƒœê·¸ë¥¼ ë Œë”ë§, ì—†ìœ¼ë©´ null ë°˜í™˜
            return imageUrl ? (
                <div style={{ marginTop: '20px' }}>
                <img src={imageUrl} alt={searchName} style={{ width: '100px', height: '100px' }} />
                </div>
            ) : null;
        }

        // ë©”ì¸ ì•± ì»´í¬ë„ŒíŠ¸
        function App() {
            // State: ì „ì²´ ì´ëª¨ì§€ ëª©ë¡ê³¼ ì‚¬ìš©ì ì…ë ¥ê°’ì„ ê´€ë¦¬
            const [emojis, setEmojis] = useState(null);
            const [inputValue, setInputValue] = useState('');

            // ë¹„ë™ê¸° í†µì‹ : ì»´í¬ë„ŒíŠ¸ê°€ ì²˜ìŒ ë Œë”ë§ë  ë•Œ API í˜¸ì¶œ
            useEffect(() => {
                fetch('https://api.github.com/emojis')
                .then(response => response.json())
                .then(data => {
                    setEmojis(data); // ê°€ì ¸ì˜¨ ë°ì´í„°ë¥¼ stateì— ì €ì¥
                })
                .catch(error => console.error('Error fetching emojis:', error));
            }, []); // ë¹ˆ ë°°ì—´ì„ ì „ë‹¬í•˜ì—¬ ìµœì´ˆ 1íšŒë§Œ ì‹¤í–‰

            // Event Handler: input ê°’ì´ ë³€ê²½ë  ë•Œë§ˆë‹¤ state ì—…ë°ì´íŠ¸
            const handleInputChange = (e) => {
                setInputValue(e.target.value);
            };

            return (
                <div style={{ padding: '30px', fontFamily: 'sans-serif' }}>
                <h1>ì´ëª¨ì§€ ê²€ìƒ‰ê¸° ğŸ”</h1>
                {/* Props: ìì‹ ì»´í¬ë„ŒíŠ¸ì— ìƒíƒœì™€ ì´ë²¤íŠ¸ í•¸ë“¤ëŸ¬ ì „ë‹¬ */}
                <Search inputValue={inputValue} onInputChange={handleInputChange} />
                <Display emojis={emojis} searchName={inputValue} />
                </div>
            );
        }

        ReactDOM.createRoot(document.getElementById('root')).render(<App />);

    </script>
   
</body>
