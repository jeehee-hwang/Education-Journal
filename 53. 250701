<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script crossorigin src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <script crossorigin src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <style>
        .card {
            border: 1px solid black;
            width: 300px;
            margin: 10px;
            padding: 20px;
            display: inline-block;
        }
        .card>* {
            display: inline-block;
        }
        .card>img {
            width: 100px;
            height: 100px;
        }
    </style>

</head>
<body>
    <div id="root"></div>

    <script type="text/babel">

        const { useEffect, useState } = React;

        // 1. Card ì»´í¬ë„ŒíŠ¸: propsë¥¼ ë°›ì•„ ë°ì´í„°ë¥¼ í‘œì‹œí•˜ê³ , return êµ¬ë¬¸ì„ ì¶”ê°€í–ˆìŠµë‹ˆë‹¤.
        function Card({ pokemon }) {
            const [pokemonDetails, setPokemonDetails] = useState(null);

            useEffect(() => {
                // ê° í¬ì¼“ëª¬ì˜ ìƒì„¸ ì •ë³´(ì´ë¯¸ì§€ URL ë“±)ë¥¼ ê°€ì ¸ì˜µë‹ˆë‹¤.
                fetch(pokemon.url)
                    .then(response => response.json())
                    .then(data => {
                        setPokemonDetails(data);
                    });
            }, [pokemon.url]); // pokemon.urlì´ ë°”ë€” ë•Œë§Œ ì¬ì‹¤í–‰í•©ë‹ˆë‹¤.

            // ë°ì´í„° ë¡œë”© ì¤‘ì—ëŠ” ê°„ë‹¨í•œ ë©”ì‹œì§€ë¥¼ í‘œì‹œí•©ë‹ˆë‹¤.
            if (!pokemonDetails) {
                return <div>Loading...</div>;
            }

            return (
                <div className="card">
                    {/* sprites.front_default ì†ì„±ì˜ ì´ë¯¸ì§€ë¥¼ ì‚¬ìš©í•©ë‹ˆë‹¤. */}
                    <img src={pokemonDetails.sprites.front_default} alt={pokemon.name} />
                    <div className="info">
                        {/* í¬ì¼“ëª¬ ID(ë²ˆí˜¸)ì™€ ì´ë¦„ì„ í‘œì‹œí•©ë‹ˆë‹¤. */}
                        <h2>No. {pokemonDetails.id}</h2>
                        <h3>name: {pokemonDetails.name}</h3>
                    </div>
                </div>
            );
        }

        // 2. PokemonList ì»´í¬ë„ŒíŠ¸: API ìš”ì²­, ìƒíƒœ ê´€ë¦¬ ë° ë Œë”ë§ì„ ë‹´ë‹¹í•©ë‹ˆë‹¤.
        function PokemonList() {
            const [pokemonList, setPokemonList] = useState([]); // í¬ì¼“ëª¬ ëª©ë¡ ìƒíƒœ

            useEffect(() => {
                // APIë¥¼ í˜¸ì¶œí•˜ì—¬ ì „ì²´ í¬ì¼“ëª¬ ëª©ë¡ì„ ê°€ì ¸ì˜µë‹ˆë‹¤.
                fetch('https://pokeapi.co/api/v2/pokemon?limit=20') // (ì˜ˆì‹œë¡œ 20ë§ˆë¦¬ë§Œ)
                    .then(response => response.json())
                    .then(data => {
                        setPokemonList(data.results); // ê°€ì ¸ì˜¨ ê²°ê³¼ë¥¼ stateì— ì €ì¥
                    });
            }, []); // ë¹ˆ ë°°ì—´ '[]'ì„ ì¶”ê°€í•˜ì—¬ ìµœì´ˆ 1ë²ˆë§Œ ì‹¤í–‰ë˜ë„ë¡ í•©ë‹ˆë‹¤.

            return (
                <div className="pokemon-list">
                    {/* pokemonList ë°°ì—´ì„ ìˆœíšŒí•˜ë©° ê° í¬ì¼“ëª¬ì— ëŒ€í•œ Card ì»´í¬ë„ŒíŠ¸ë¥¼ ë Œë”ë§í•©ë‹ˆë‹¤. */}
                    {pokemonList.map(pokemon => (
                        <Card key={pokemon.name} pokemon={pokemon} />
                    ))}
                </div>
            );
        }

        // 3. Title ì»´í¬ë„ŒíŠ¸ëŠ” ì œëª©ë§Œ ë‹´ë‹¹í•˜ë„ë¡ ë‹¨ìˆœí™”í–ˆìŠµë‹ˆë‹¤.
        function Title() {
            return <h1>í¬ì¼“ëª¬ ë„ê°</h1>;
        }

        // 4. App ì»´í¬ë„ŒíŠ¸: ì „ì²´ ì»´í¬ë„ŒíŠ¸ë¥¼ ì¡°í•©í•©ë‹ˆë‹¤.
        function App() {
            return (
                <>
                    <Title />
                    <PokemonList />
                </>
            );
        }

        // ReactDOM ë Œë”ë§
        ReactDOM.createRoot(document.getElementById('root')).render(<App />);

    </script>
   
</body>
</html>


